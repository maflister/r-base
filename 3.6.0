#%Module -*- tcl -*-
##
## modulefile
##
proc ModulesHelp { } {
  puts stderr "\tAdds [module-info name] to your environment.\n"
}

module-whatis "adds R to your environment variables"

set           r_vers   3.6.0
set           img_root              /rcc/stor1/containers
set-alias	  R                     "singularity exec -B /cm/shared/apps/R/${r_vers}/lib64/R/library:/extR/library1,/rcc/stor1/refdata/R/library:/extR2/library2 ${img_root}/ubuntu-16.04_r-${r_vers}_latest.simg R $*"

if ![ is-loaded 'singularity' ] {
  module load singularity
}

